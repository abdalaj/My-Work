@model SaveCityViewModel
@{
    ViewData["Title"] = "CityForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Hi, welcome back!</h4>
            <p class="mb-0">Validation</p>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Form</a></li>
            <li class="breadcrumb-item active">
                @if (Model.Id > 0)
                {<a href="javascript:void(0)">Update City</a> }
                else
                { <a href="javascript:void(0)">Add City</a>}
            </li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                @if (Model.Id > 0)
                {<h4 class="card-title">Update City</h4> }
                else
                { <h4 class="card-title">Add City</h4>}
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form class="form-valide" asp-action="Save">
                        <div class="row">
                            <div class="col-xl-12">

                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label" for="val-username">
                                        arabic name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-9">
                                        @if (Model.Id > 0)
                                        {<input type="hidden" asp-for="Id" />}
                                        <input type="text" asp-for="Name_ar" class="form-control" placeholder="Enter a username..">
                                    </div>
                                    @Html.ValidationMessageFor(c => c.Name_ar, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label" for="val-username">
                                        English name
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-9">
                                        <input type="text" asp-for="Name_en" class="form-control" placeholder="Enter a username..">
                                    </div>
                                    @Html.ValidationMessageFor(c => c.Name_en, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label" for="val-username">
                                        Government
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-9">
                                        <select asp-for="Government_id" class="form-control">
                                            @if (Model.Id == 0)
                                            {
                                                <option value="">select...</option>
                                            }

                                            @foreach (var item in Model.Government_drop_down_list)
                                            {
                                                var _selected_Government = "";

                                                if (Model.Id > 0)
                                                {
                                                    if (item.Id == Model.Government_id) { _selected_Government = "selected"; }
                                                }

                                                <option value="@item.Id" _selected_Government>@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                    

                                    @Html.ValidationMessageFor(c => c.Government_id, "", new { @class = "text-danger" })

                                    @if (Model.Error != string.Empty)
                                    {

                                        <div class="alert alert-danger alert-dismissible fade show">
                                            <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
                                            <strong>Error!</strong> @Model.Error
                                            <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                                                <span><i class="mdi mdi-close"></i></span>
                                            </button>
                                        </div>
                                    }
                                    <div class="form-group row">
                                        <div class="col-lg-12 ml-auto">
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <script>

        $("select").select2();

    </script>
}