@model SaveApplicationIntroViewModel 
@{
    ViewData["Title"] = "IntroForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>Hi, welcome back!</h4>
            <p class="mb-0">Validation</p>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Form</a></li>
            <li class="breadcrumb-item active">
                @if (Model.Id > 0)
                {<a href="javascript:void(0)">Update Intro</a> }
                else
                { <a href="javascript:void(0)">Add Intro</a>}
            </li>
        </ol>
    </div>
</div>
<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                @if (Model.Id > 0)
                {<h4 class="card-title">Update Intro</h4> }
                else
                { <h4 class="card-title">Add Intro</h4>}
            </div>
            <div class="card-body">
                <div class="form-validation">
                    <form class="form-valide" asp-action="Save" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-xl-12">

                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label" for="val-username">
                                        English Data Intro
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-9">
                                        @if (Model.Id > 0)
                                        {<input type="hidden" asp-for="Id" />}
                                        <input type="text" asp-for="Description_en" class="form-control" placeholder="Enter data..">
                                    </div>
                                    @Html.ValidationMessageFor(c => c.Description_en, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label" for="val-username">
                                        Arabic Data Intro
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-9">
                                        <input type="text" asp-for="Description_ar" class="form-control" placeholder="Enter data..">
                                    </div>
                                    @Html.ValidationMessageFor(c => c.Description_ar, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label" for="val-username">
                                        Choose Image
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-9">
                                        <div class="input-group mb-3">
                                            <div class="custom-file">
                                                <input type="file" asp-for="File" class="custom-file-input">
                                                <label class="custom-file-label">Choose</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-12 ml-auto">
                                            <button type="submit" class="btn btn-primary">Save</button>
                                        </div>
                                    </div>
                                </div>

                                @if (Model.Error != string.Empty)
                                {

                                    <div class="alert alert-danger alert-dismissible fade show">
                                        <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><polygon points="7.86 2 16.14 2 22 7.86 22 16.14 16.14 22 7.86 22 2 16.14 2 7.86 7.86 2"></polygon><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
                                        <strong>Error!</strong> @Model.Error
                                        <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close">
                                            <span><i class="mdi mdi-close"></i></span>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>